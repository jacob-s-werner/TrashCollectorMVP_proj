@model TrashCollectorMVP.Models.TemporaryPickupSuspension

@{
    ViewData["Title"] = "Create Temporary Pickup Suspension";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Temporary Pickup Suspension</h1>

<h4>Temporary Pickup Suspension</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTemporaryPickupSuspension">
