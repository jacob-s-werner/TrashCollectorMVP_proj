@model TrashCollectorMVP.Models.OneTimePickup

@{
    ViewData["Title"] = "Create One Time Pickup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create OneTime Pickup</h1>

<h4>OneTimePickup</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOneTimePickup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateForPickup" class="control-label"></label>
                <input asp-for="DateForPickup" class="form-control" />
                <span asp-validation-for="DateForPickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
